<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ECECEC">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/list_weather_icon"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/sunny_mini" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/list_weather_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tommorrow"
                android:textColor="#595959"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/list_weather_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clear"
                android:textColor="#595959"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/list_weather_temp_high"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="100dp"
                android:text="78°"
                android:textColor="#595959"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/list_weather_temp_low"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="100dp"
                android:text="67°"
                android:textColor="#595959"
                android:textSize="20dp" />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
